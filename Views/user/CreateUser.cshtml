@model Day4BookStore.Models.User
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h4 class="page-title">CreateUser</h4>

<form method="post" class="col-md-6">
    <div class="form-group">
        @Html.LabelFor(n => n.user_name)
        @Html.TextBoxFor(n => n.user_name, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.user_name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.user_email)
        @Html.TextBoxFor(n => n.user_email, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.user_email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.user_age)
        @Html.TextBoxFor(n => n.user_age, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.user_age, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.user_password)
        @Html.PasswordFor(n => n.user_password, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.user_password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.confirm_password)
        @Html.PasswordFor(n => n.confirm_password, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.confirm_password, "", new { @class = "text-danger" })
    </div>
    
    <input type="submit" value="save" />

</form>

